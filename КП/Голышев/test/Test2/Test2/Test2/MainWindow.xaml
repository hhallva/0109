<Window x:Class="Test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Основной контейнер -->
        <Border BorderBrush="#3B82F6" BorderThickness="2" CornerRadius="8" Margin="16">
            <Grid>
                <!-- Верхняя панель: хлебные крошки и кнопки -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24,16,0,0">
                    <TextBlock Text="Главная страница / Каталог" Foreground="#3B82F6" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,16,24,0">
                    <Button Content="Корзина" 
                            Background="#1F2937" Foreground="White" 
                            Padding="16,8" Margin="0,0,8,0"
                            FontSize="14" FontWeight="SemiBold" 
                            Cursor="Hand" />
                    <Button Content="Профиль" 
                            Background="#1F2937" Foreground="White" 
                            Padding="16,8" 
                            FontSize="14" FontWeight="SemiBold" 
                            Cursor="Hand" />
                </StackPanel>

                <!-- Основная разметка: левая панель + основной контент -->
                <Grid Margin="0,50,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая панель -->
                    <Border Background="White" Padding="16" CornerRadius="8">
                        <StackPanel>
                            <!-- Логотип / заголовок -->
                            <TextBlock Text="ЕКО ШОП" FontWeight="Bold" FontSize="18" Margin="0,0,0,24"/>

                            <!-- Навигация -->
                            <StackPanel Margin="0,0,0,32">
                                <TextBlock Text="Главная" Background="#F3F4F6" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"/>
                                <TextBlock Text="Поиск" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"/>
                            </StackPanel>

                            <!-- Фильтры -->
                            <TextBlock Text="Фильтры" FontWeight="Bold" Margin="0,0,0,16"/>
                            <TextBlock Text="Бренд" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"/>
                            <TextBlock Text="Цена" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"/>
                            <TextBlock Text="Акции" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- Правая панель: каталог -->
                    <Grid Grid.Column="1" Margin="24,0,24,24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок каталога -->
                        <TextBlock Text="Каталог" FontSize="28" FontWeight="Bold" Margin="0,0,0,24"/>

                        <!-- Сетка товаров -->
                        <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                            <!-- Пример карточки товара (повторить 8 раз) -->
                            <Border Width="200" Height="100" Background="#E5E7EB" Margin="8" CornerRadius="8" MouseDown="ProductCard_MouseDown" Tag="Мыло|1000 ₽|Натуральное мыло ручной работы с эфирными маслами.">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="100" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="100" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="100" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="280" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom">
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="280" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="280" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>

                            <Border Width="200" Height="280" Background="#E5E7EB" Margin="8" CornerRadius="8">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <TextBlock Text="1000 ₽" FontWeight="Bold" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock Text="Мыло" FontSize="14" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
