<Window x:Class="APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Логин</Label>
            <TextBox HorizontalAlignment="Center" x:Name="LoginText"  Width="150"/>
            <Label>Пароль</Label>
            <TextBox HorizontalAlignment="Center" x:Name="PasswordText" Width="150" />
            <Label></Label>
            <Button Content="Войти" x:Name="LoginButton"  Click="LoginButton_Click" />
            <Label></Label>
            <Button Content="Войти как гость"  x:Name="GuestButton" Click="GuestButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
