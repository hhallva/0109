<Window x:Class="APP.CreateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP"
        mc:Ignorable="d"
        Title="CreateProduct" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="ExitButton" Content="Назад"  Click="ExitButton_Click" Grid.Column="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel>
                <Label>Название</Label>
                <TextBox x:Name="NameTextBox" Width="200"/>
                <Label>Описание</Label>
                <TextBox x:Name="DescriptionTextBox" Width="200"/>
                <Label>Цена</Label>
                <TextBox x:Name="PriceTextBox" Width="200"/>
                <Label>Производитель</Label>
                <ComboBox x:Name="ManufacturerTextBox" Width="200"/>
                <Label>Постовщик</Label>
                <ComboBox x:Name="SupplierTextBox" Width="200"/>
                <Label>Количество на складе</Label>
                <TextBox x:Name="AmountTextBox" Width="200"/>
                <Label>Пол</Label>
                <TextBox x:Name="GenderTextBox" Width="200"/>
                <Button x:Name="AddButton" Content="Добавить"  Click="AddButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
