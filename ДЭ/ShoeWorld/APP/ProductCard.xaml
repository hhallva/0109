<Window x:Class="APP.ProductCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP"
        mc:Ignorable="d"
        Title="Карточка товара" Height="250" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/shoeimg.png" Width="auto" Height="auto" />
        <StackPanel Grid.Column="1" Margin="20,20,20,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Категория товара" FontSize="20"/>
                <TextBlock Text=" | " FontSize="20"/>
                <TextBlock Text="Наименование товара" FontSize="20"/>
            </StackPanel>
            <TextBlock Text="Описание товара" FontSize="16"/>
            <TextBlock Text="Производитель" FontSize="16"/>
            <TextBlock Text="Поставщик" FontSize="16"/>
            <TextBlock Text="Цена" FontSize="16"/>
            <TextBlock Text="Еденица измерения" FontSize="16"/>
            <TextBlock Text="Количество на складе" FontSize="16"/>
        </StackPanel>
        <TextBlock Text="26%" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64"/>
    </Grid>
</Window>
