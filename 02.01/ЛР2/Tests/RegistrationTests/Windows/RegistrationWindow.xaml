<Window x:Class="RegistrationTests.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationTests.Windows"
        mc:Ignorable="d"
        Title="Регистрация" 
        Height="450" Width="450"
        MinHeight="450" MinWidth="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <Label Content="Логин" />
            <TextBox x:Name="LoginTextBox" Height="24" />

            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Height="24"/>

            <Label Content="Подтвердить пароль"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="24"/>

            <Label Content="Email"/>
            <TextBox x:Name="EmailTextBox" Height="24"/>

            <Button x:Name="RegistrationButton" Content="Зарегистрироваться" Click="RegistrationButton_Click" Height="24" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
